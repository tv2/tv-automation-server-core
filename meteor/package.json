	"prettier": "@sofie-automation/code-standard-preset/.prettierrc.json",
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier"
		],
		"*.{ts,tsx,js,jsx}": [
			"yarn lint:raw"
		]
	},
	"meteor": {
		"mainModule": {
			"client": "client/main.tsx",
			"server": "server/main.ts"
		},
		"nodeModules": {
			"recompile": {
				"mos-connection": "legacy"
			}
		}
	},
	"standard-version": {
		"scripts": {
			"postbump": "yarn libs:syncVersionsAndChangelogs"
		}
	},
	"resolutions": {
		"url-parse": "^1.5.9"
	}
